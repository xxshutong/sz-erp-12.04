<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <!-- list all examples in a tabular format -->
    <screen name="ManageBatchNo">
        <section>
            <actions>
                <set field="headerItem" value="BatchNoItem"/>
                <set field="titleProperty" value="BatchNoManager"/>
                <set field="batchNoCtx" from-field="parameters"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
                                    <!--<decorator-section name="menu-bar">-->
                                        <!--<container style="button-bar"><link target="EditExampleLayer" link-type="ajax-window" height="500" width="500" text="${uiLabelMap.ExampleNewExample}" style="buttontext create"/></container>-->
                                    <!--</decorator-section>-->
                                    <decorator-section name="search-options">
                                        <include-form name="FindBatchNo" location="component://sz-inventory/widget/InventoryForms.xml"/>
                                    </decorator-section>
                                    <decorator-section name="search-results">
                                        <include-form name="ListBatchNo" location="component://sz-inventory/widget/InventoryForms.xml"/>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>